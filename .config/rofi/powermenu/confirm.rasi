/* Confirm Dialog */

@import "styles/colors.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"JetBrainsMono Nerd Font 11";
}

window {
    width:      			225px;
    padding:    			25px;
    border-radius:          4px;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@foreground;
}
